// Read and Write stdio to FILE

struct Contact {
char name[30] = {"Ilka Salomon"};
int number[12] = {4,9,1,7,8,1,9,8,2,3,6,4};
};

#typedef struct Contact cont
#include <stdio.h>

int main () {

// Variables
FILE *contacts;
cont activeContact;
char buff[1000];

// open File
contacts = fopen("PATH!!", "a+"); // open contact File in read - write - append mode

// READ ---------------------------------------------------------------------

fgets(buff, 1000, (FILE*)contacts )

// WRITE --------------------------------------------------------------------

// get Information from user
printf ("Your name:\t");
scanf ("%s", &(activeContact.name));
printf ("Your number:\t");
scanf ("%i", &(activeContact.number));

// write to File
fprintf(contacts, "%s %i", activeContact.name, activeContact.number);

//close File
fclose(contacts);

}
